<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <p>
            <% posts[i].completedOrder %></p>
          <% if(posts[i].completedOrder === false){%>
            <li class="col-6 justify-content-between mt-5">
              <p><strong>Drink</strong>: <%= posts[i].title %></p>
              <p><strong>Size</strong>: <%= posts[i].caption %></p>
              <form action="/post/completedOrder/<%= posts[i].id %>?_method=PUT"  method="POST">
                <button type="delete" class="btn btn-primary">Did you Complete Order?</button>
              </form>
            </li>
           <% } %>
          <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>